<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitebg"
    tools:context=".restaurant.RestStaticstics">

    <TextView
        android:id="@+id/headLine_rest_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="566dp"
        android:text="Statistics:"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/howMuchOrd_rest_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number of total orders: X"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headLine_rest_TV"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/uniOrdUsers_rest_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number of unique users ordered: X"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/howMuchOrd_rest_TV"
        app:layout_constraintVertical_bias="0.14" />

    <TextView
        android:id="@+id/totMon_rest_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="total money earned: X"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/avgOrdPrice_rest_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uniOrdUsers_rest_TV" />

    <TextView
        android:id="@+id/avgOrdPrice_rest_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="average coast of order: X"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/mostOrdDish_rest_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totMon_rest_TV" />

    <TextView
        android:id="@+id/mostOrdDish_rest_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="most ordered dish: X"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avgOrdPrice_rest_TV" />
</androidx.constraintlayout.widget.ConstraintLayout>